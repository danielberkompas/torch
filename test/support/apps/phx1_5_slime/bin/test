#!/usr/bin/env bash

function clear() {
  rm -rf priv/templates
  rm -rf priv/repo/migrations/*.exs
  rm -rf lib/phx1_5_slime/blog.ex
  rm -rf lib/phx1_5_slime/blog
  rm -rf test/phx1_5_slime/blog_test.exs
  rm -rf lib/phx1_5_slime_web/controllers/post_controller.ex
  rm -rf lib/phx1_5_slime_web/templates/layout/torch_layout.html.eex
  rm -rf lib/phx1_5_slime_web/templates/post/
  rm -rf lib/phx1_5_slime_web/views/post_view.ex
  rm -rf test/phx1_5_slime_web/controllers/post_controller_test.exs
  cp ../../routers/phx1_5_slime_original.ex lib/phx1_5_slime_web/router.ex
}

clear;

mix deps.get || { echo 'Dependencies could not be fetched!'; exit 1; }
MIX_ENV=test mix ecto.drop || { echo 'Database could not be dropped'; exit 1; }
MIX_ENV=test mix torch.install || { echo 'Torch could not be installed!'; exit 1; }
MIX_ENV=test mix torch.gen.html Blog Post posts title:string published:boolean published_at:datetime views:integer || { echo 'Torch files not generated!'; exit 1; }
cp ../../routers/phx1_5_slime_modified.ex lib/phx1_5_slime_web/router.ex
mix test || { echo 'Tests failed!'; clear; exit 1; }

clear;

echo 'Tests succeeded!'
exit 0
